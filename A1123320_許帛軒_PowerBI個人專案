<body>
  <div class="category-buttons" id="categoryButtons"></div>
  <div class="card-container" id="cardContainer"></div>

  <script>
    // 圖片與Power BI資料
    const cards = [
      { type: 'image', src: 'https://picsum.photos/id/1011/400/280', title: '自然景觀', category: '圖片' },
      { type: 'image', src: 'https://picsum.photos/id/1025/400/280', title: '動物', category: '圖片' },
      {
        type: 'iframe',
        src: 'https://app.powerbi.com/view?r=eyJrIjoiODBjZmYwMTItYjkyNi00YWFmLTk2Y2MtYjU2ZWM4YzAyOTZhIiwidCI6IjVhNDg0OTUzLTc3ZWYtNDJlYy05MGNmLTJmNGUxMDM3ZmZjNyIsImMiOjEwfQ%3D%3D',
        title: 'A1123320_許帛軒_PowerBI個人專案',
        category: 'PowerBI'
      }
    ];

    // 取得所有類別
    const categories = [...new Set(cards.map(card => card.category))];

    // DOM
    const categoryButtons = document.getElementById('categoryButtons');
    const cardContainer = document.getElementById('cardContainer');

    // 建立按鈕
    categories.forEach((cat, idx) => {
      const btn = document.createElement('button');
      btn.className = 'category-btn' + (idx === 0 ? ' active' : '');
      btn.textContent = cat;
      btn.onclick = () => {
        document.querySelectorAll('.category-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        showCards(cat);
      };
      categoryButtons.appendChild(btn);
    });

    // 顯示卡片
    function showCards(category) {
      cardContainer.innerHTML = '';
      cards.filter(card => card.category === category).forEach(card => {
        const cardDiv = document.createElement('div');
        cardDiv.className = 'image-card';
        if(card.type === 'image') {
          cardDiv.innerHTML = `<img src="${card.src}" alt="${card.title}"><div class="image-title">${card.title}</div>`;
        } else if(card.type === 'iframe') {
          cardDiv.innerHTML = `<iframe title="${card.title}" width="600" height="373.5" src="${card.src}" frameborder="0" allowFullScreen="true"></iframe>
          <div class="image-title">${card.title}</div>`;
        }
        cardContainer.appendChild(cardDiv);
      });
    }

    // 初始化顯示第一個類別
    showCards(categories[0]);
  </script>
</body>
</html>
